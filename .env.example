# Google Cloud Vision API (서비스 계정)
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# JWT Secret (인증용)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Database
DATABASE_PATH=./data/database.sqlite

# 초기 관리자 계정
ADMIN_EMP_CODE=admin
ADMIN_PASSWORD=admin123!

# SMB 설정 (예시 - 실제 환경에 맞게 수정)
# 형식: SMB_FOLDER_1=//server/share|username|password|폴더별칭
SMB_FOLDER_1=//192.168.1.100/scan_folder1|username|password|경영혁신팀폴더
SMB_FOLDER_2=//192.168.1.100/scan_folder2|username|password|영업팀폴더A
SMB_FOLDER_3=//192.168.1.100/scan_folder3|username|password|영업팀폴더B

# 로컬 테스트용 폴더 (SMB 대신 사용)
LOCAL_WATCH_ENABLED=true
LOCAL_WATCH_FOLDER=./data/watch

# 파일 처리 설정
BACKUP_FOLDER=./data/backup
FAILED_FOLDER=./data/failed
ORIGINAL_FOLDER=./data/original

# 파일명 최대 길이
MAX_FILENAME_LENGTH=50

# SSO 설정 (Amaranth10)
SSO_ENABLED=true
SSO_PARAM_EMP_CODE=emp_code
SSO_PARAM_DEPT_CODE=dept_code
SSO_PARAM_COMPANY_CODE=company_code

# 서버 설정
NEXT_PUBLIC_APP_URL=http://localhost:3000
